extends base

block content
    main.main 
        .signup-form 
            h2.heading-secondary.ma-bt-lg sign up for an account
            form.form
                .form__group 
                    label.form__label(for='name') Full Name 
                    input#name.form__input(type='text', placeholder='Your full name', required)
                .form__group 
                    label.form__label(for='email') Email address 
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md 
                    label.form__label(for='password') Password 
                    input#password.form__input(type='password', placeholder='At least 8 characters', required, minlength='8')
                .form__group.ma-bt-md 
                    label.form__label(for='passwordConfirm') Confirm Password 
                    input#passwordConfirm.form__input(type='password', placeholder='Re-enter your password', required, minlength='8')
                .form__group 
                    button.btn.btn--green Sign Up